<hr>
<h1> <%= @the_board.name %> </h1>
<hr>
<div>
  <div>
    <h2>
      Add a new post
    </h2>

    <form action="/insert_post" method="post">
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="query_body" rows="3"></textarea>
      </div>

      <div>
        <label for="expires_on_box">
          Expires on
        </label>

        <input type="date" id="expires_on_box" name="query_expires_on">
      </div>

      <button>
        Add post
      </button>
    </form>
  </div>
</div>
<hr>
<h1> Active Posts </h1>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Title
        </th>

        <th>
          Body
        </th>

        <th>
          Posted On
        </th>

        <th>
          Expires On
        </th>

      </tr>

      <% @board_posts.each do |a_post| %>
      <tr>
        
        <td>
          <%= a_post.title %>
        </td>

        <td>
          <%= a_post.body %>
        </td>

        <td>
          <%= a_post.created_at.strftime("%Y-%m-%d") %> 
        </td>

        <td>
          <%= a_post.expires_on %>
        </td>
        
      </tr>
      <% end %>
    </table>
  </div>
</div>
